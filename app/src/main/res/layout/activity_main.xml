<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_background_pattern">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/tbLoginType"
            layout="@layout/include_tool_bar" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="150dp" />

        <!-- INSTALLATION TYPE -->

        <RadioGroup
            android:id="@+id/rgInstallType"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:weightSum="1">

            <RadioButton
                android:id="@+id/rbAdministrator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="@string/text_title_admin"
                android:textColor="@color/colorprimary"
                android:textSize="18sp"
                android:theme="@style/MyRadioTheme" />

            <RadioButton
                android:id="@+id/rbAssociate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:checked="false"
                android:text="@string/text_title_associate"
                android:textColor="@color/colorprimary"
                android:textSize="18sp"
                android:theme="@style/MyRadioTheme" />
        </RadioGroup>

    </LinearLayout>


</RelativeLayout>
